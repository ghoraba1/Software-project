$('#upload-image-btn').click(function() {
    const equipmentId = $('#edit-equipment-id').text(); // Fetch the actual ID from the modal content
    
    if (!equipmentId || isNaN(equipmentId)) { // Validate that it's a valid numeric ID
        alert('Invalid or missing Equipment ID.');
        return;
    }

    if (!selectedImageFile) {
        alert('No image file selected.');
        return;
    }

    const formData = new FormData();
    formData.append('equipment_img', selectedImageFile);

    $.ajax({
        url: `http://localhost:3000/api/v1/equipment/update-image/${equipmentId}`, // Use the actual ID
        method: 'PUT',
        data: formData,
        contentType: false,
        processData: false,
        success: function(response) {
            alert('Image uploaded successfully!');
            $('#editModal').modal('hide'); // Close the modal on success
            fetchAndDisplayEquipment(); // Refresh the equipment list
        },
        error: function(xhr, status, error) {
            console.error('Error updating image:', error);
            alert('Image failed to upload.');
        }
    });
});



