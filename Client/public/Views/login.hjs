<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login and Register</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="../Src/login.js" type="text/javascript"></script>
  <script>
    $(document).ready(function () {
      // Handle login button click
      $('#loginBtn').click(function (event) {
        event.preventDefault();
        var email = $('#email').val();
        var password = $('#password').val();

        if (email === '' || password === '') {
          $('#errorMessage').text('Please fill in all fields.').addClass('text-danger');
        } else {
          // Perform login
          $.ajax({
            url: '/api/v1/user/login',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ email: email, password: password }),
            success: function (response) {
              $('#errorMessage').text('Login successful!').addClass('text-success');
              window.location.href = '/EquipmentMangement';
            },
            error: function (xhr) {
              $('#errorMessage').text(xhr.responseText).addClass('text-danger');
            }
          });
        }
      });

      // Redirect to register page
      $('#registerBtn').click(function (event) {
        event.preventDefault();
        window.location.href = '/register';
      });
    });
  </script>
</head>

<body class="bg-light">

  <!-- Header -->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Superior Bros</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><a class="nav-link" href="#">Electrical</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Civil</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Mechanical</a></li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Login</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Form Container -->
  <div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 400px;">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Login/Register</h2>
        <form id="authForm">
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary" id="loginBtn">Login</button>
            <button type="button" class="btn btn-success" id="registerBtn">Register</button>
          </div>
          <p id="errorMessage" class="mt-3 text-center"></p>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-5 py-4 bg-dark text-white">
