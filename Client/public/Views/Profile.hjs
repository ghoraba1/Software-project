</svg></button> `);
        $('#username').html(`Name: <input type="search" id="newname" placeholder="New Name" required>`)
        $('#email').html(`Email: <input type="search" id="newemail" placeholder="New Email" required>`)
        $('#password').html(`Password: <input type="search" id="newpass" placeholder="New Password" required>`)
    
    })

$(document).on('click', '#ok', async function() {
  var name = $('#newname').val();
  var email = $('#newemail').val();
  var pass = $('#newpass').val();
  var str ='"'+pass+'"'
if(!name){}else{oldname=name;}
if(!email){}else{oldemail=email;}
if(!pass){}else{oldpass=str;}
  var form = {
    username: oldname,
    email: oldemail,
    password: oldpass,
    role: role 
  };

  $.ajax({
    url: 'http://localhost:3000/api/V1/user/:id', 
    method: 'PUT',
    contentType: 'application/json',
    data: JSON.stringify(form),
    success: function(res) {
      $('#head').html(`<h1>Your Profile:- <button id="edit" class="btn btn-outline-warning"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/></svg></button></h1>`);
      $('#username').html(`Name: ${oldname}`);
      $('#email').html(`Email: ${oldemail}`);
      $('#password').html(``);
    },
    error: function(error) {
      alert('Could not update :(');
    }
  });
});


$(document).on('click','#stop',function(){
$('#head').html(`<h1>Your Profile:-  <button id="edit"class="btn btn-outline-warning"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
