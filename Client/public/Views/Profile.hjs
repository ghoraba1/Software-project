  <script>
    $(document).ready(function(){
      $.ajax({
       url: '/api/v1/user/profile' ,
       method:"GET",
       success:function(res){
       $('#profile').html(`
       <ul style="list-style-type: none;"><h3>
 <li>Name: ${res.username}</li>
 <li>Email: ${res.email}</li>
 <li>Role: ${res.role}</li>
 <li>Created at: ${res.created_at}</li>
</h3></ul>`)
       },
       error:function(){
        $('#profile').html(`<p>error</p>`)
        alert("Couldnt retrieve your info")
       }
      });
    });
  </script>
</head>

