    $(document).ready(function(){
      //const bcrypt = require('bcrypt');
      var oldname;
var oldemail;
var oldpass;
var role;
      $.ajax({
       url: '/api/v1/user/profile' ,
       method:"GET",
       success:function(res){
 $('#username').html(`Name: ${res.username}`)
 $('#email').html(`Email: ${res.email}`)
 $('#role').html(`Role: ${res.role}`)
 $('#createdat').html(`Created at: ${res.created_at}`)
 oldname=res.username;
 oldemail= res.email;
 oldpass= res.password;
 role=res.role
       },
       error:function(){
        $('#profile').html(`<p>error</p>`)
        alert("Couldnt retrieve your info")
       }
      });
   
    $(document).on('click','#edit',function(){
$(this).replaceWith(` <button id="ok" class="btn btn-outline-success"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
  <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
